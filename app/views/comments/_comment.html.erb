    <tr>
      <%= div_for comment do %>
        <th>
          <a href="<%= user_path(comment.user) %>">
            <%= gravatar_for(comment.user,{:size=>50}) %>
          </a>
            <%= link_to comment.user.username, comment.user %>
        </th>
        <td>
          <%= comment.content %>
        </td>
      <% end %>
    </tr>

